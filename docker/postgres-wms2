version: '3'
services:

  wms:
    image: java:8-jre-alpine
    volumes:
      - ${PWD}/app:/app
    ports:
      - "8090:8090"
    command: ls -l /app

  postgres:
    image: postgres:alpine
    volumes:
      - wms-data:/var/lib/postgresql
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: wms
      POSTGRES_PASSWORD: wms
      POSTGRES_DB: wms

volumes:
  wms-data: