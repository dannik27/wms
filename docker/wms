version: '3'
services:

  wms:
    image: troofy/wms
    ports:
      - "8090:8090"
    environment:
      ACTIVE_PROFILE: docker

  activiti:
    image: troofy/activiti
    ports:
      - "8080:8080"

  postgres:
    image: postgres:alpine
    volumes:
      - wms-data:/var/lib/postgresql
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: wms
      POSTGRES_PASSWORD: wms
      POSTGRES_DB: wms

